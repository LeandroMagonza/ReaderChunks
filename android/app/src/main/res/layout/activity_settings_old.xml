<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="4dp"
        app:title="@string/settings"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Font Size Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_size"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/btnDecreaseFontSize"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_remove"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/decrease_font_size" />

                <TextView
                    android:id="@+id/tvFontSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24 sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:background="@color/surface_variant"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp" />

                <ImageButton
                    android:id="@+id/btnIncreaseFontSize"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/increase_font_size" />

            </LinearLayout>

            <!-- Line Spacing Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/line_spacing"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/btnDecreaseLineSpacing"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_remove"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/decrease_spacing" />

                <TextView
                    android:id="@+id/tvLineSpacing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4 sp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:background="@color/surface_variant"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp" />

                <ImageButton
                    android:id="@+id/btnIncreaseLineSpacing"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/increase_spacing" />

            </LinearLayout>

            <!-- Padding Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/side_margins"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/btnDecreasePadding"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_remove"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/decrease_margins" />

                <TextView
                    android:id="@+id/tvPadding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="16 dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:background="@color/surface_variant"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp" />

                <ImageButton
                    android:id="@+id/btnIncreasePadding"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/increase_margins" />

            </LinearLayout>

            <!-- Bionic Reading Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bionic_reading"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bionic_reading_description"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/radioGroupBionicReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <RadioButton
                    android:id="@+id/radioBionicOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bionic_off"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioBionicClassic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bionic_classic"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioBionicModern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bionic_modern"
                    android:textColor="@color/text_primary" />

            </RadioGroup>

            <!-- Preview Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/previewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/surface"
                android:padding="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preview_text"
                    android:textSize="24sp"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Language Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/layoutLanguageSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/surface"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/ivLanguageFlag"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_flag_spain"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvLanguageName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EspaÃ±ol"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/text_secondary" />

            </LinearLayout>

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_defaults"
                android:textColor="@color/text_primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>